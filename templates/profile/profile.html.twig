{% extends 'base.html.twig' %}

{% block title %}Profile!{% endblock %}

{% block body %}

    <div class="form">
        {% if app.user.avatar %}
            <img class="profile" src="{{asset('images/avatar/' ~ app.user.avatar)}}" alt="">
        {% else %}
            <img class="profile" src="{{asset('images/avatar.jpg')}}" alt="">
        {% endif %}
        <div class="profiledet">
            <p>Nom : {{app.user.nom}}</p>
            <p>Prenom : {{app.user.prenom}}</p>
            <p>Email : {{app.user.email}}</p>
            <p>Date de naissance : {{app.user.bornAt|date("d/m/Y")}}</p>
        </div>
        <a class="mprofile btn btn-secondary" href="{{ path('app_modifier') }}">Modifier Profile</a>
    </div>
 
{% endblock %}
