{% extends 'base.html.twig' %}

{% block title %}Model index{% endblock %}

{% block body %}
    <h1>Model index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.nom }}</td>
                <td>
                    <a href="{{ path('app_admin_model_show', {'id': model.id}) }}">show</a>
                    <a href="{{ path('app_admin_model_edit', {'id': model.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_admin_model_new') }}">Create new</a>
    <a class="btn btn-primary" href="{{ path('app_admin_vehicule_index') }}"> Retour</a>
{% endblock %}
