{% extends 'base.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <h1 class="text-center">Marque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.nom }}</td>
                <td>
                    <a href="{{ path('app_admin_marque_show', {'id': marque.id}) }}">show</a>
                    <a href="{{ path('app_admin_marque_delete', {'id': marque.id}) }}">del</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_admin_marque_new') }}">Create new</a>
    <a class="btn btn-primary" href="{{ path('app_admin_vehicule_index') }}"> Retour</a>
{% endblock %}
